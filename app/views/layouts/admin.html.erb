<!doctype html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>OpenCounter - Admin</title>

    <!-- Application styles. -->
    <%= stylesheet_link_tag   "application" %>
    <%= requirejs_include_tag "application" %>

    <%= stylesheet_link_tag :on_the_spot %>

    <%= javascript_include_tag :jquery %>
    <%= javascript_include_tag 'jquery-ui' %>
    <%= javascript_include_tag :on_the_spot %>
    <%= csrf_meta_tag %>
    
    <meta charset="utf-8">
    
  </head>

  <body>
    <div class="container-fluid">
      <div id="admin_header">
        <div style="float: right;">
          <% unless current_user %>
            <%= button_to 'Log Out', destroy_admin_user_session_path, :method => :delete %>
          <% end %>
        </div>
        <div>
          <%= link_to 'Applications', admin_applications_url %> |
          <%= link_to 'CIC Codes', admin_cic_codes_url %> |
          <%= link_to 'Requirements', admin_requirements_url %> |
          <%= link_to 'Users', admin_admin_users_url %> |
          <%= link_to 'Zoning Districts', admin_zoning_districts_url %>
        </div>
      </div>
      <% if notice.present? %>
        <p class="alert alert-success"><%= notice %></p>
      <% elsif alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      
      <%= yield %>
    </div>
  </body>
</html>
